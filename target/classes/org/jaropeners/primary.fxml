<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.effect.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="TOP_CENTER" spacing="20.0" style="-fx-background-color: #edf0f2;" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.jaropeners.PrimaryController">
   <children>
      <ImageView fitHeight="175.0" fitWidth="249.0">
         <image>
            <Image url="@../../Image/Jar%20Openers%20Logo.png" />
         </image>
      </ImageView>
      <HBox alignment="CENTER" spacing="200.0">
         <children>
            <Button fx:id="primaryButton" onAction="#switchToSecondary" style="-fx-background-color: #b3e5fc; -fx-border-color: #0288d1; -fx-border-radius: 3%; -fx-cursor: hand;" text="Index Maintenance" />
            <Label text="Number of files indexed:" />
            <Button fx:id="about" alignment="CENTER" contentDisplay="TOP" mnemonicParsing="false" onAction="#switchToAbout" style="-fx-background-color: #b3e5fc; -fx-border-color: #0288d1; -fx-border-radius: 3%; -fx-cursor: hand;" text="About" textAlignment="CENTER" />
         </children>
      </HBox>
      <HBox prefHeight="25.0" prefWidth="670.0" spacing="10.0">
         <children>
            <TextField prefHeight="25.0" prefWidth="615.0" promptText="Search Files" />
            <Button contentDisplay="CENTER" mnemonicParsing="false" prefHeight="25.0" prefWidth="76.0" style="-fx-background-color: #b3e5fc; -fx-border-color: #0288d1; -fx-border-radius: 3%; -fx-cursor: hand;" text="Search" textAlignment="CENTER" />
         </children>
      </HBox>
      <HBox alignment="CENTER" spacing="20.0">
         <children>
            <RadioButton mnemonicParsing="false" text="Any of the Search Terms" />
            <RadioButton mnemonicParsing="false" text="All the Search Terms" />
            <RadioButton mnemonicParsing="false" text="Exact Phrase" />
         </children>
      </HBox>
      <TableView prefHeight="400.0" prefWidth="596.0">
        <columns>
          <TableColumn prefWidth="695.0" text="Search Results" />
        </columns>
      </TableView>
   </children>
   <effect>
      <Blend />
   </effect>
   <padding>
      <Insets bottom="50.0" left="100.0" right="100.0" top="50.0" />
   </padding>
</VBox>
